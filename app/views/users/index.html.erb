<h3>Users</h3>
<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.role.titleize %></td>
      <td></td>
      <td>
      <%if @current_user.role == 'admin' %>
        <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-warning" type="button">Change role</a>
        <%= render user %>
      <% end %>
      </td>
      <td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger') unless user == current_user %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Create New User' , new_user_path, :class=> 'btn btn-success' %>

</div>
